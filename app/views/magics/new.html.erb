<div class="box my-5">

  <!-- マジック投稿画面タイトル -->
  <%= render 'layouts/title', title: "Magic Upload", obj: @magic %>

  <!-- マジック投稿フォーム -->
  <%= form_with model: @magic, url: magics_path, local: true do |f| %>
    <div class="row py-2 px-5">

      <!-- レフトコンテンツ -->
      <div class="col-sm-6 pb-4">
        <!-- 動画アップロードボタン -->
        <div class="row offset-sm-2">
          <%= f.label "動画のアップロード" %>
        </div>
        <div class="row offset-sm-2">
          <%= f.file_field :video, :accept => 'video/*' %>
        </div>
      </div>

      <!-- ライトコンテンツ -->
      <%= render 'magics/form', product: @magic, tag_list: @tag_list, f: f %>
    </div>

    <div class="row justify-content-center my-5">
      <%= f.submit "アップロード", class: "btn btn-lg btn-secondary col-3 mb-5" %>
    </div>
  <% end %>

</div>


