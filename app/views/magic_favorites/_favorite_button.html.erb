<!-- カレントユーザがいいねをしているか判定する -->
<% if user_signed_in? && magic.favorited_by?(current_user) %>
	<%= link_to magic_magic_favorites_path(magic), method: :delete, remote: true do %>
		<div class="btn btn-secondary">
			<i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
			<span><%= magic.magic_favorites.count %>　いいね! </span>
		</div>
	<% end %>
<% else %>
	<%= link_to magic_magic_favorites_path(magic), method: :post, remote: true do %>
	<div class="btn btn-secondary">
		<i class="far fa-heart" aria-hidden="true"></i>
		<span><%= magic.magic_favorites.count %>　いいね! </span>
	</div>
	<% end %>
<% end %>