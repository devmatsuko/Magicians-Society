<div class="box my-5 pb-5">

  <!-- メインビジュアルのスライド化 -->
  <div id="carousel" class="carousel slide" data-ride="carousel">

    <!-- メインビジュアル -->
    <div class="carousel-inner">
      <!-- スライド1 -->
      <div class="carousel-item active">
        <div class="row p-5">
          <div class="col-12 justify-content-center main-visual1 d-block w-100">
            <div class="justify-content-center pt-5">
              <div class="col-12 main-visual-text-box mt-2 justify-content-center title-fade-in-bottom">
                <p class="h1 main-title text-white text-center">Welcome to Magicians Society</p>
                <p class="h5 sub-title text-white text-center">お気に入りのマジックや商品を見つけよう！</p>
              </div>

              <div class="main-link-area">
                <!-- ログインしていない場合 -->
                <% if !user_signed_in? %>
                  <!--ログイン、サインアップボタン-->
                  <div class="row justify-content-center link-fade-in-bottom">
                    <div class="mx-5">
                      <%= link_to "Login", new_user_session_path, class: "h3 top-link-btn text-white main-link" %>
                    </div>
                    <div class="mx-5">
                      <%= link_to 'Guest Login', users_guest_sign_in_path, method: :post, class: "h3 top-link-btn text-white main-link" %>
                    </div>
                  </div>
                <!-- ログイン中の場合 -->
                <% else %>
                  <!--マジック投稿一覧、商品一覧へのリンク-->
                  <div class="row justify-content-center link-fade-in-bottom">
                    <div class="mx-5">
                      <%= link_to "Magics", magics_path, class: "h3 top-link-btn text-white main-link" %>
                    </div>
                    <div class="mx-5">
                      <%= link_to "Products", products_path, class: "h3 top-link-btn text-white main-link" %>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- スライド2 -->
      <div class="carousel-item">
        <div class="row p-5">
          <div class="col-12 justify-content-center main-visual2 d-block w-100">
            <div class="justify-content-center pt-5">
              <div class="col-12 main-visual-text-box mt-2 justify-content-center title-fade-in-bottom">
                <p class="h3 sub-title text-white text-right pr-4">本サイトはマジック動画投稿SNSです。</p>
                <p class="h4 sub-title text-white text-right pr-4">一覧からマジック動画を楽しみましょう！</p>
                <div class="row justify-content-end link-fade-in-bottom mr-5 mt-5">
                  <%= link_to "→Watch Magics", magics_path, class: "h3 top-link-btn text-white main-link font-weight-bold" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- スライド3 -->
      <div class="carousel-item">
        <div class="row p-5">
          <div class="col-12 justify-content-center main-visual3 d-block w-100">
            <div class="justify-content-center pt-5">
              <div class="col-12 main-visual-text-box mt-2 justify-content-center title-fade-in-bottom">
                <p class="h3 sub-title text-white text-left pl-4">マジック道具やレクチャーノートなどを売買することができます。</p>
                <p class="h4 sub-title text-white text-left pl-4">一覧から気になる商品を探してみましょう！</p>
                <div class="row justify-content-start link-fade-in-bottom ml-4 mt-5">
                  <%= link_to "→View Products", products_path, class: "h3 top-link-btn text-white main-link font-weight-bold" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- 次のスライド -->
    <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <!-- 前のスライド -->
    <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>


  <!-- 本日のピックアップマジック -->
  <div class="row pb-5">
    <div class="col-10 offset-1 justify-content-center">
      <h4 class="title">本日のピックアップマジック</h4>
      <div class="title-line mt-2"></div>
    </div>
  </div>
  <div class="row">
    <div class="col-10 offset-1 justify-content-center">
      <%= render 'homes/magic_index', magics: @magics %>
    </div>
    <div class="col-10 offset-1">
      <%= link_to "more >>", magics_path , class: "float-right" %>
    </div>
  </div>

  <!-- 本日のピックアップ商品 -->
  <div class="row py-5">
    <div class="col-10 offset-1 justify-content-center">
      <h4 class="title">本日のピックアップ商品</h4>
      <div class="title-line mt-2"></div>
    </div>
  </div>
  <div class="row">
    <div class="col-10 offset-1">
      <%= render 'homes/product_index', products: @products %>
    </div>
    <div class="col-10 offset-1">
      <%= link_to "more >>", products_path , class: "float-right" %>
    </div>
  </div>


</div>