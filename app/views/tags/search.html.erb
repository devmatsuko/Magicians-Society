<div class="box my-5 pb-5">

  <!-- タグ検索画面タイトル -->
  <%= render 'layouts/title', title: "Tag Search", obj: nil %>

  <!-- マジック投稿画面へのリンク -->
  <div class="row mb-4 new-btn">
    <div class="col-2 offset-9">
      <%= link_to 'マジックを投稿する', new_magic_path, class: "btn btn-secondary" %>
    </div>
  </div>

  <!-- マジック一覧 -->
  <div class="col-sm-8 offset-sm-1 mb-4">
    <span>タグ名「<%= @tag.tag %>」の検索結果 (<%= @magics.count %>件)</span>
  </div>
  <% if @magics.count == 0 %>
    <h3 class="text-center pt-3">検索結果はありません。</h3>
  <% else %>
    <%= render 'magics/index', magics: @magics %>
  <% end %>

  <!-- スマホ画面における投稿ボタン -->
  <div class="new-responsive-btn">
    <%= link_to new_magic_path do %>
      <i class="fas fa-plus-circle fa-7x text-secondary"></i>
    <% end %>
  </div>

</div>