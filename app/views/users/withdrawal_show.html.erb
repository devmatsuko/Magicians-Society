<div class="box my-5 pb-5">

  <!-- ユーザー一覧画面タイトル -->
  <div class="row p-5">
    <div class="col-12 justify-content-center">
      <h1 class="title">Delete your account? </h1>
      <div class="title-line mt-4"></div>
    </div>
  </div>

  <!-- 退会ボタン、キャンセルボタンの設置 -->
  <div class="row justify-content-center my-5">
    <%= link_to "キャンセル", user_path(current_user.id), class: "btn btn-secondary col-2" %>
    <%= link_to "退会する", withdrawal_user_path(current_user.id), method: :patch, class: "btn btn-danger offset-1 col-2" %>
  </div>

</div>