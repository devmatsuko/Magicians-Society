<div class="box my-5">

  <!-- ユーザー詳細画面タイトル -->
  <div class="row p-5">
    <div class="col-12 justify-content-center">
      <% if @user.id == current_user.id %>
        <h1 class="title">MyPage</h1>
      <% else %>
        <h1 class="title">Profile</h1>
      <% end %>
      <div class="title-line mt-4"></div>
    </div>
  </div>

  <!-- プロフィール情報 -->
  <div class="row py-2">
    <!-- レフトコンテンツ -->
    <div class="col-6">
      <!-- プロフィール画像 -->
      <div class="row justify-content-center">
        <%= attachment_image_tag(@user, :image, :fill, 150, 150, fallback: "noimage.png", size:'150x150', class:"img-thumbnail profile-image") %>
      </div>
      <!-- プロフィール編集ボタン -->
      <div class="row justify-content-center my-4">
        <% if @user.id == current_user.id %>
      		<%= link_to 'プロフィール編集', edit_user_path(@user), class: "btn btn-sm btn-secondary" %>
      	<% end %>
    	</div>
    </div>

    <!-- ライトコンテンツ -->
    <div class="col-4 justify-content-center">
      <h3 class="mt-3"><%= @user.display_name %></h3>
      <p class="mt-4"><%= @user.description %></p>
    </div>
  </div>

</div>