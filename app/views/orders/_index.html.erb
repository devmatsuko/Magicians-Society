<table class="table">
  <tbody class="tbody">
    <% orders.each do |order| %>
      <tr class="row justify-content-center px-4">
        <!-- 注文商品画像 -->
        <td class="col-3 d-flex align-items-center justify-content-center">
          <%= link_to order_path(order) do %>
            <%= attachment_image_tag(order.product, :image, :fill, 120, 80, fallback: "noimage.png", size:'80x80', class:"img-thumbnail profile-image mx-auto d-block") %>
            <%= order.product.name %>
          <% end %>
        </td>
        <!-- 注文日時 -->
        <td class="col-3 d-flex align-items-center">
          <%= link_to order_path(order) do %>
            <span><%= l order.created_at %></span>
          <% end %>
        </td>
        <!-- 請求額 -->
  			<td class="col-2 d-flex align-items-center">
  			  <span><%= order.total_price.to_s(:delimited) %>円</span>
			  </td>
  			<!-- 注文ステータス -->
  			<td class="col-2 d-flex align-items-center">
  			  <span><%= order.order_status %></span>
			  </td>
      </tr>
    <% end %>
  </tbody>
</table>

<!-- ページャ -->
<div class="row justify-content-center mt-4 pb-4" >
  <%= paginate orders %>
</div>
